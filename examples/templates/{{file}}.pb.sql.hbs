{{#*inline "table"}}
CREATE TABLE {{snake @package.name}}_{{snake @message.name}} {
	{{> @partial-block}}
};
{{@message.recursive}}
{{/inline}}

{{#*inline "column"}}
CREATE COLUMN {{snake @field.name}} {{> @partial-block}};
{{/inline}}

{{#package}}
	{{#file}}
		{{#message}}
			{{#> table}}
				{{#field label="repeated"}}
					{{#> column}}
					{{/column}}
				{{/field}}
			{{/table}}
		{{/message}}
	{{/file}}
{{/package}}
