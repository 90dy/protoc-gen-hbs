{{#*inline "table"}}
CREATE TABLE {{snake package}}_{{snake message}} {
	{{> @partial-block}}
};
{{/inline}}

{{#*inline "column"}}
CREATE COLUMN {{snake type}} {{> @partial-block}};
{{/inline}}

{{#package}}
	{{#file}}
		{{#message}}
			{{#> table package=@pb_package message=@name}}
				{{#field}}
					{{#> column type=@name}}
					{{/column}}
				{{/field}}
			{{/table}}
		{{/message}}
	{{/file}}
{{/package}}
