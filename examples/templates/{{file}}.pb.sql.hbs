{{#*inline "table"}}
CREATE TABLE {{snake @package.name}}_{{snake @message.name}} {
	{{> @partial-block}}
};
{{@message.recursive}}
{{/inline}}

{{#*inline "column"}}
CREATE COLUMN {{snake @field.name}} {{> @partial-block}};
{{/inline}}

{{#*inline "type"}}
{{#field type="repeated"}}
	test
{{else}}
	{{#field type="string"}}VARCHAR{{/field}}
	{{#field type="(uint|int|fixed|sfixed)32"}}INTEGER{{/field}}
	{{#field type="(uint|int|fixed|sfixed)64"}}BIGINT{{/field}}
{{/field}}
{{/inline}}

{{#package}}
	{{#file}}
		{{#message name="*lo"}}
			{{#> table}}
				{{#field label="repeated"}}
					{{#> column}}
					{{/column}}
				{{/field}}
				{{#field label="!repeated"}}
					{{#> column}}
					{{/column}}
				{{/field}}
			{{/table}}
		{{/message}}
	{{/file}}
{{/package}}
