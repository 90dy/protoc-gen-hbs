{{#*inline "table"}}
CREATE TABLE {{snake @package.name}}_{{snake @message.name}} {
	{{> @partial-block}}
};
{{/inline}}

{{~#*inline "type"}}
	{{~#field type="string"}}VARCHAR{{/field}}
	{{~#field type="(uint|int|fixed|sfixed)32"}}INTEGER{{/field}}
	{{~#field type="(uint|int|fixed|sfixed)64"}}BIGINT{{/field}}
	{{~#field type="message"}}INTEGER{{/field}}
	{{~#field type="enum"}}INTEGER{{/field}}
	{{~#field type="bytes"}}VARBINARY{{/field}}
{{~/inline}}

{{#*inline "column"}}
	{{~#field type="message"}}
	CREATE COLUMN {{snake @field.name}}_id INTEGER;
	{{else}}
	CREATE COLUMN {{snake @field.name}} {{> type}};
	{{/field}}
{{/inline}}

{{#package}}
	{{#message}}
		{{#> table}}
			{{~> column}}
		{{/table}}
		{{@message.recursive}}
	{{/message}}
{{/package}}
